@model GradeALMS.Models.Course

@{
    ViewData["Title"] = "Delete Course";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Delete Course</h1>
</div>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="alert alert-warning">
            <h4>Are you sure you want to delete this course?</h4>
        </div>
        
        <div class="card shadow">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Title:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>
                    
                    <dt class="col-sm-3">Description:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>
                    
                    <dt class="col-sm-3">Credits:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Credits)</dd>
                    
                    <dt class="col-sm-3">Instructor:</dt>
                    <dd class="col-sm-9">
                        @(Model.Instructor != null ? Model.Instructor.Name : "Not assigned")
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
