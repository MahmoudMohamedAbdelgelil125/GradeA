@model IEnumerable<Course>

@{
    ViewData["Title"] = "Courses";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Courses</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Course
        </a>
    </div>
</div>

<form method="get">
    <div class="row mb-3">
        <div class="col-md-4">
            <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Search courses..." />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-outline-secondary">Search</button>
        </div>
        <div class="col-md-2">
            <a asp-action="Index" class="btn btn-outline-secondary">Clear</a>
        </div>
    </div>
</form>

<div class="card shadow">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Course</th>
                        <th>Instructor</th>
                        <th>Credits</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model) {
                        <tr>
                            <td>
                                <div>
                                    <strong>@Html.DisplayFor(modelItem => item.Title)</strong>
                                    @if (!string.IsNullOrEmpty(item.Description))
                                    {
                                        <br><small class="text-muted">@item.Description.Substring(0, Math.Min(100, item.Description.Length))@(item.Description.Length > 100 ? "..." : "")</small>
                                    }
                                </div>
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.Instructor.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Credits)</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
