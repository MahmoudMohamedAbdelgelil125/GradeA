@{
    ViewData["Title"] = "Access Denied";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow border-warning">
                <div class="card-header bg-warning">
                    <h2 class="text-center mb-0 text-dark">
                        <i class="fas fa-exclamation-triangle me-2"></i>@ViewData["Title"]
                    </h2>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-lock fa-4x text-warning mb-3"></i>
                        <h4>Sorry, you don't have permission to access this resource.</h4>
                        <p class="text-muted">
                            You may need to log in with a different account or contact an administrator for access.
                        </p>
                    </div>
                    
                    <div class="d-flex justify-content-center gap-2">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                            <i class="fas fa-home me-1"></i>Go Home
                        </a>
                        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary">
                            <i class="fas fa-sign-in-alt me-1"></i>Login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
