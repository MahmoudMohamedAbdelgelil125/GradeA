@model GradeALMS.Models.Grade

@{
    ViewData["Title"] = "Delete Grade";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Delete Grade</h1>
</div>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="alert alert-warning">
            <h4>Are you sure you want to delete this grade?</h4>
        </div>
        
        <div class="card shadow">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Student:</dt>
                    <dd class="col-sm-8">@Model.Student?.Name</dd>

                    <dt class="col-sm-4">Course:</dt>
                    <dd class="col-sm-8">@Model.Course?.Title</dd>

                    <dt class="col-sm-4">Score (%):</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Score)</dd>

                    <dt class="col-sm-4">Grade Letter:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.GradeLetter)</dd>

                    <dt class="col-sm-4">Grade Date:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.GradeDate)</dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
